@page "/upload"
@using Pgvector
@using Pgvector.EntityFrameworkCore
@using Microsoft.ML.OnnxRuntime
@using Microsoft.ML.OnnxRuntime.Tensors
@using System.ComponentModel.DataAnnotations
@inject AppDbContext Db
@inject InferenceSession OnnxSession
@rendermode InteractiveServer // Enables server-side Blazor with interactive features (make it global in routes.razor)

@using SixLabors.ImageSharp
@using SixLabors.ImageSharp.PixelFormats
@using SixLabors.ImageSharp.Processing

<PageTitle>Inventory Image Upload</PageTitle>

<h3>Upload Image (Max 5 MB)</h3>

<EditForm Model="uploadModel" OnValidSubmit="HandleSubmit" FormName="uploadForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Image Name (required, unique):</label>
        <InputText @bind-Value="uploadModel.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Select Image:</label>
        <InputFile OnChange="OnFileSelected" accept="image/*" class="form-control" />
        @if (!string.IsNullOrEmpty(fileError))
        {
            <div class="text-danger">@fileError</div>
        }
    </div>

    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="alert @(isError ? "alert-danger" : "alert-success")">
            @statusMessage
        </div>
    }

    <button type="submit" class="btn btn-primary" disabled="@isProcessing">Upload</button>
</EditForm>

<!-- Debug output -->
<div class="mt-3 p-2 bg-light">
    <strong>Debug Info:</strong><br/>
    Selected file: @(selectedFile?.Name ?? "null")<br/>
    File size: @(selectedFile?.Size ?? 0) bytes<br/>
    Name: "@uploadModel.Name"<br/>
    Is processing: @isProcessing
</div>

@code {
    private UploadModel uploadModel = new();
    private IBrowserFile? selectedFile;
    private string? fileError;
    private string? statusMessage;
    private bool isError;
    private bool isProcessing;

    private const long MaxFileSize = 5 * 1024 * 1024; // 5 MB
    private const double SimilarityThreshold = 0.05;  // Cosine distance threshold for duplicates

    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        fileError = null;

        if (selectedFile.Size > MaxFileSize)
        {
            fileError = "File exceeds 5 MB limit.";
            selectedFile = null;
        }
    }

    private async Task HandleSubmit()
    {
        if (selectedFile == null || string.IsNullOrWhiteSpace(uploadModel.Name))
            return;

        isProcessing = true;
        statusMessage = null;
        StateHasChanged();

        try
        {
            await using var memoryStream = new MemoryStream();
            await selectedFile.OpenReadStream(MaxFileSize).CopyToAsync(memoryStream);
            var imageBytes = memoryStream.ToArray();

            var embedding = await GenerateEmbeddingAsync(imageBytes);

            // Check for near-duplicate using cosine distance
            // CosineDistance returns 0 for identical vectors, 2 for opposite vectors
            bool isDuplicate = await Db.Images
                .AnyAsync(i => i.Embedding.CosineDistance(embedding) < SimilarityThreshold);

            if (isDuplicate)
            {
                statusMessage = "A similar image already exists in the database.";
                isError = true;
            }
            else
            {
                var item = new ImageObject
                {
                    Name = uploadModel.Name.Trim(),
                    Embedding = embedding,
                    Filename = selectedFile.Name
                };

                Db.Images.Add(item);
                await Db.SaveChangesAsync();

                statusMessage = $"Success! '{uploadModel.Name}' stored with ID {item.Id}.";
                isError = false;

                uploadModel = new();
                selectedFile = null;
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"Error: {ex.Message}";
            isError = true;
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task<Vector> GenerateEmbeddingAsync(byte[] imageBytes)
    {
        const int TargetSize = 224;

        // CLIP mean and std (RGB order)
        var mean = new float[] { 0.48145466f, 0.4578275f, 0.40821073f };
        var std = new float[] { 0.26862954f, 0.26130258f, 0.27577711f };

        using var image = await Image.LoadAsync<Rgb24>(new MemoryStream(imageBytes));

        image.Mutate(x => x.Resize(new ResizeOptions
        {
            Size = new Size(TargetSize, TargetSize),
            Mode = ResizeMode.Crop // center crop to maintain aspect ratio
        }));

        var tensor = new DenseTensor<float>(new[] { 1, 3, TargetSize, TargetSize });

        image.ProcessPixelRows(accessor =>
        {
            for (int y = 0; y < TargetSize; y++)
            {
                Span<Rgb24> pixelRow = accessor.GetRowSpan(y);

                for (int x = 0; x < TargetSize; x++)
                {
                    var pixel = pixelRow[x];
                    tensor[0, 0, y, x] = (pixel.R / 255.0f - mean[0]) / std[0];
                    tensor[0, 1, y, x] = (pixel.G / 255.0f - mean[1]) / std[1];
                    tensor[0, 2, y, x] = (pixel.B / 255.0f - mean[2]) / std[2];
                }
            }
        });

        var inputName = OnnxSession.InputMetadata.Keys.First();
        var inputs = new List<NamedOnnxValue>
        {
            NamedOnnxValue.CreateFromTensor(inputName,tensor)
        };

        using IDisposableReadOnlyCollection<DisposableNamedOnnxValue> results = OnnxSession.Run(inputs);

        // Extract the embedding (last layer pooled output)
        var output = results[0].AsTensor<float>();
        
        // Debug: Log the output shape to understand tensor dimensions
        var dimensions = output.Dimensions.ToArray();
        Console.WriteLine($"Output tensor shape: [{string.Join(", ", dimensions)}]");
        
        // Flatten the output tensor to get the embedding
        var embeddingArray = new float[512];
        var flatOutput = output.ToArray();
        
        // Copy first 512 values (or less if output is smaller)
        var copyLength = Math.Min(512, flatOutput.Length);
        Array.Copy(flatOutput, embeddingArray, copyLength);

        // L2 normalize (standard practice for CLIP embeddings)
        float norm = 0f;
        for (int i = 0; i < embeddingArray.Length; i++)
            norm += embeddingArray[i] * embeddingArray[i];

        norm = MathF.Sqrt(norm);
        if (norm > 0f)
        {
            for (int i = 0; i < embeddingArray.Length; i++)
                embeddingArray[i] /= norm;
        }

        return new Vector(embeddingArray);
    }

    public class UploadModel
    {
        [Required(ErrorMessage = "Image name is required")]
        public string Name { get; set; } = string.Empty;
    }
}